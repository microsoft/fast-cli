{
  "name": "@microsoft/cfp-template",
  "description": "The default FAST project template",
  "version": "0.1.0",
  "author": {
    "name": "Microsoft",
    "url": "https://discord.gg/FcSNfg4"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Microsoft/fast.git"
  },
  "bugs": {
    "url": "https://github.com/Microsoft/fast/issues"
  },
  "main": "index.js",
  "scripts": {
    "build": "webpack --config=./template/webpack.prod.js",
    "eslint": "eslint . --ext .ts",
    "eslint:fix": "eslint . --ext .ts --fix",
    "start": "webpack-dev-server --config=./template/webpack.dev.js --history-api-fallback --progress",
    "test": "npm run eslint && npm run test:e2e",
    "serve": "node ./template/server.js",
    "test:e2e": "npm run build && npx playwright test --config=./template/playwright.config.js"
  },
  "dependencies": {
    "@microsoft/fast-element": "^1.7.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.20.0",
    "@types/node": "^17.0.21",
    "express": "^4.17.3",
    "html-webpack-plugin": "^3.2.0",
    "ts-loader": "^7.0.5",
    "typescript": "^4.6.2",
    "webpack": "^4.44.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2"
  }
}
